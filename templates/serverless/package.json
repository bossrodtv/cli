{
  "name": "template-serverless-ts",
  "version": "0.0.1",
  "repository": "https://github.com/constrod/template-serverless-ts",
  "bugs": {
    "url": "https://github.com/constrod/template-serverless-ts/issues"
  },
  "contributors": [
    {
      "name": "Rodrick Alcantara",
      "url": "https://github.com/constROD"
    }
  ],
  "description": "Custom Template for Serverless TypeScript",
  "author": "Rodrick Alcantara <rialcantara21@gmail.com>",
  "license": "MIT",
  "main": "serverless.ts",
  "scripts": {
    "dev": "nodemon --watch 'src/**' --watch 'serverless.ts' --ext 'ts' --exec \"sls offline --host 0.0.0.0\"",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:staging": "sls deploy --stage staging",
    "deploy:prod": "sls deploy --stage prod",
    "encode:env": "cat .env | base64 -w 0 > .env-encoded",
    "format": "prettier --write ./src/**/*.ts",
    "lint": "eslint --ext .ts ./",
    "lint:fix": "eslint ./src --fix --ext .js,.ts",
    "prepare": "husky install",
    "pre-commit": "lint-staged --allow-empty"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@middy/core": "^4.2.7",
    "@middy/http-error-handler": "^4.2.7",
    "@middy/http-json-body-parser": "^4.2.7",
    "@middy/http-router": "^4.2.7",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "dynamodb-toolbox": "^0.6.0",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "pg": "^8.9.0",
    "pg-native": "^3.0.1",
    "swagger-jsdoc": "^6.2.5",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@serverless/typescript": "^3.21.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/lodash": "^4.14.191",
    "@types/node": "^17.0.35",
    "@types/pg": "^8.6.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "concurrently": "^7.6.0",
    "cspell": "^6.19.2",
    "esbuild": "^0.14.54",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "serverless": "^3.22.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-esbuild": "^1.32.8",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^10.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.8.4"
  }
}
