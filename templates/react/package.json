{
  "name": "template-react-typescript",
  "version": "0.0.1",
  "repository": "https://github.com/constrod/template-react-ts",
  "bugs": {
    "url": "https://github.com/constrod/template-react-ts/issues"
  },
  "contributors": [
    {
      "name": "Rodrick Alcantara",
      "url": "https://github.com/constROD"
    }
  ],
  "description": "Custom Template for React TypeScript",
  "author": "Rodrick Alcantara <rialcantara21@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "clean": "rm -rf ./build",
    "build": "pnpm clean && vite build",
    "release": "changeset tag",
    "preview": "vite preview",
    "encode:env": "cat .env | base64 -w 0 > .env-encoded",
    "format": "prettier --write ./src/**/*.ts{,x}",
    "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.ts,.jsx,.tsx",
    "pre-commit": "lint-staged --allow-empty",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.24.9",
    "@tanstack/react-query-devtools": "^4.24.9",
    "axios": "^1.3.4",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "immer": "^9.0.14",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-use": "^17.4.0",
    "zod": "^3.20.6",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@types/lodash": "^4.14.190",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.8",
    "cspell": "^6.14.3",
    "dotenv": "^16.0.3",
    "eslint": "8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "6",
    "lint-staged": "^12.4.1",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.16",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.8.0",
    "typescript": "^4.9.4",
    "vite": "^3.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-ejs": "^1.4.4",
    "vite-plugin-pages": "^0.28.0",
    "vite-plugin-svgr": "^2.1.0",
    "vite-tsconfig-paths": "^3.6.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  }
}
