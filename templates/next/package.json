{
  "name": "template-next-ts",
  "version": "0.0.1",
  "repository": "https://github.com/constrod/template-next-ts",
  "bugs": {
    "url": "https://github.com/constrod/template-next-ts/issues"
  },
  "contributors": [
    {
      "name": "Rodrick Alcantara",
      "url": "https://github.com/constROD"
    }
  ],
  "description": "Custom Template for Next TypeScript",
  "author": "Rodrick Alcantara <rialcantara21@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "clean": "rm -rf ./.next && rm -rf ./out",
    "build": "pnpm clean && next build",
    "release": "changeset tag",
    "preview": "next start",
    "start": "next start",
    "encode:env": "cat .env | base64 -w 0 > .env-encoded",
    "format": "prettier --write ./src/**/*.ts{,x}",
    "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.ts,.jsx,.tsx",
    "pre-commit": "lint-staged --allow-empty",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.24.6",
    "@tanstack/react-query-devtools": "^4.24.6",
    "axios": "^1.3.4",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "immer": "^9.0.15",
    "lodash": "^4.17.21",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use": "^17.4.0",
    "sass": "^1.59.2",
    "sharp": "^0.31.0",
    "zod": "^3.20.6",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@next/eslint-plugin-next": "^12.3.1",
    "@svgr/webpack": "^6.2.1",
    "@types/lodash": "^4.14.190",
    "@types/node": "^18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "autoprefixer": "^10.4.8",
    "cspell": "^6.14.3",
    "eslint": "8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "6",
    "lint-staged": "^12.4.2",
    "postcss": "^8.4.16",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  }
}
